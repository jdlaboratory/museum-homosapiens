extends ../templates/layout
block content 
    div(class="content")
        div(class="content-main")
            h1.index 자료실
            h3.index 홍보, 메이킹 영상
            
            div.modal-wrap                  
                a(data-modal="modal-bts1")
                    img(class="modal-thumb", src="../assets/thumbnail/bts-1.jpg")
                    p 인터뷰 영상
                a(data-modal="modal-bts2")
                    img(class="modal-thumb", src="../assets/thumbnail/bts-2.jpg")
                    p 디지털 DNA 매머드 120일간의 기록
                a(data-modal="modal-bts3")
                    img(class="modal-thumb", src="../assets/thumbnail/bts-3.jpg")
                    p 실감콘텐츠, 동굴벽화 제작 영상
                a(data-modal="modal-bts4")
                    img(class="modal-thumb", src="../assets/thumbnail/bts-4.jpg")
                    p 특별전 소개 영상 

            h3.index 도록
            div.modal-wrap
                a(href="../assets/pdf/호모사피엔스-도록.pdf", class="pdf-thumb", target="_blank")
                    img(src="../assets/thumbnail/pdf.jpg")
                    p 호모사피엔스

            h3.index 기획1실 영상
            div.modal-wrap

            h3.index 기획2실 영상
            div.modal-wrap

            h3.index 기획1,2실 VR 투어
            div.modal-wrap  
                a(href="./zone-03-vr1.html", class="vr-thumb")
                    img(class="modal-thumb vr-thumb", src="../assets/thumbnail/vr-01.jpg")
                    p 기획1실
                a(href="./zone-03-vr2.html", class="vr-thumb")
                    img(class="modal-thumb vr-thumb", src="../assets/thumbnail/vr-01.jpg")
                    p 기획2실
            

            div(class="modal", id="modal-bts1")
                div(class="modal-bg modal-exit")
                div(class="modal-container")
                    video(controls, class="modalVideo")
                        source(src="../assets/videos3/(인터뷰영상)특별전시_호모사피엔스전.mp4", type="video/mp4")
                    button(class="modal-close modal-exit") X
            
            div(class="modal", id="modal-bts2")
                div(class="modal-bg modal-exit")
                div(class="modal-container")
                    video(controls, class="modalVideo")
                        source(src="../assets/videos3/(특별전 호모 사피엔스) 디지털 DNA 매머드_120일간의 기록.mp4", type="video/mp4")
                    button(class="modal-close modal-exit") X
            
            div(class="modal", id="modal-bts3")
                div(class="modal-bg modal-exit")
                div(class="modal-container")
                    video(controls, class="modalVideo")
                        source(src="../assets/videos3/(특별전 호모 사피엔스) 실감콘텐츠, 동굴벽화 영상 제작 홍보 영상-210524.mp4", type="video/mp4")
                    button(class="modal-close modal-exit") X
            
            div(class="modal", id="modal-bts4")
                div(class="modal-bg modal-exit")
                div(class="modal-container")
                    video(controls, class="modalVideo")
                        source(src="../assets/videos3/(특별전 호모사피엔스)_국문, 영문.mp4", type="video/mp4")
                    button(class="modal-close modal-exit") X
            
            

        div(class="content-nav")
            span 
                a(href='./zone-02.html') ← &nbsp; 이전
            span(class="current") 현재위치: 자료실
            span
                a(href='./zone-00.html') 처음으로 &nbsp; →
block footer
    script(src="../pre-js/modal.js")
